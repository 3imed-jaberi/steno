{
  "extends": "@tsconfig/node10/tsconfig.json",
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true
  }
}
